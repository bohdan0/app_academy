<h1>Add Goal</h1>

<form class="" action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label for="Title">
    Title
    <input type="text" name="goal[title]" value="">
  </label>

  <label for="Body">
    Body
    <textarea name="goal[body]" rows="8" cols="80"></textarea>
  </label>

  <label for="Privacy">
    Privacy
    <input type="checkbox" name="goal[private]" value="true">
  </label>

  <input type="submit" name="" value="Submit">

</form>
